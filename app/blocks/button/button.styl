.btn
	margin 0 auto
	padding-x 25px
	padding-y 15px
	background-color #998675
	border none
	border-radius 4px
	box-shadow 0 3px 0 #736357
	color #ffffff
	font-weight bold
	font-size 14px
	text-transform uppercase
	transition background-color .5s

	&:hover
		background-color #736357

