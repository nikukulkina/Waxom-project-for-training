.header
	padding-y 40px

	&__desktop
		display flex
		justify-content space-between
		width 100%
		@media (max-width:980px)
			display none

	&__logo
		cursor pointer
		@media (max-width:1120px)
			padding-x 10px


	&__icon
		width 64px
		height 56px
		vertical-align middle
	&__text
		font-family 'Raleway'
		font-size 34px
		font-weight 400
		vertical-align middle
		color #ffffff
		@media (max-width:1095px)
			display none


	&__menu
		margin-right 20px 
	&__nav
		padding-x 30px
		display flex
		align-items center
		justify-content space-between
		@media (max-width:1154px)
			padding-x 0

	&__item
		margin-right 20px
		width 60px
		text-decoration none
		cursor pointer
		color $white
		transition color .5s ease-out
		will-change color

		&:hover
			color #978979

	&__nav-icons
		display flex
		justify-content space-between
	&__nav-icon
		margin-right 20px
		size (24px)
		cursor pointer
		color $white
		transition color .5s ease-out
		will-change color

		&:hover
			color #978979
	&__mobile
		display none
		@media (max-width:980px)
			position relative
			display flex
			justify-content space-between
			align-items center

	&__mobile-menu
		position absolute
		z-index 100
		visibility hidden
		width 40%
		opacity 0
		background-color rgba(0, 0, 0, .8)
		transform translate(0, -80%)
		transition .6s
		@media (max-width:500px)
			width 50%
		@media (max-width:400px)
			width 60%
		&_active
			visibility visible
			opacity 1
			transform translate(0, 80%)
	&__mobile-item
		margin-y 10px
		padding-left 20px
		display block
		text-decoration none
		cursor pointer
		color $white
		transition color .5s ease-out
		will-change color
		&:hover
			text-decoration underline
			color #978979
