.service
	padding-bottom 20px
	display flex
	flex-direction column
	align-items center
	width 20%
	color #555555
	transition color .5s ease-out
	will-change color

	&::after 
		width 50px
		height 2px
		content ''
		background-color #555555

	&:hover		
		color #978979
		&::after
			background-color #978979

	&__img
		padding-bottom 10px
		width 100%
		max-width 60px
		max-height 60px
		
	&__title, &__description
		padding-bottom 10px
		font-size 22px
		text-align center

	&__description
		font-size 14px
		color #555555
