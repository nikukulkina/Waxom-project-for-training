.service
	padding-bottom 20px
	display flex
	flex-direction column
	align-items center
	width 24%
	color #555555
	transition color .5s ease-out
	will-change color

	&::after 
		margin-top 20px
		width 50px
		height 2px
		content ''
		background-color #f1eee9

	&:hover		
		color #c7b299
		&::after
			background-color #c7b299

	&__img
		padding-bottom 10px
		width 100%
		max-width 60px
		max-height 60px
		
	&__title, &__description
		padding-bottom 20px
		text-align center
	&__title
		font-family 'Raleway'
		font-size 22px
		font-weight 600

	&__description
		line-height 22px
		color #8c8c8c
