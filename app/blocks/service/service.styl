.service
	padding-bottom 20px
	display flex
	flex-direction column
	align-items center
	width 20%

	&__img
		padding-bottom 10px
		width 100%
		max-width 60px
		max-height 60px
	&__title, &__description
		padding-bottom 10px
		font-size 22px
		text-align center
		color #555555
	&__description
		font-size 14px

	&::after 
		width 50px
		height 2px
		content ''
		background-color #555555

	&__title:hover
		color #978979