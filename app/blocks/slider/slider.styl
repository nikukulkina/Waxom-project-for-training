.slider
	width 100%
	height 700px
	@media (max-width:976px)
		height 530px
	@media (max-width:480px)
		height 420px
	&__inner
		display flex
		
	&__slide
		display flex
		flex-direction column
		width 100%
		align-items center
		text-align center
		background-color transparent
		border none
		justify-content center

	&__prev,
	&__next
		position absolute
		z-index 10
		top 50%
		transform translateY(-50%)
		cursor pointer
		background-color transparent
		border none
		@media(max-width:640px)
			display none
	&__prev
		left 20px

	&__next
		right 20px

	&__prev-img,
	&__next-img
		width 40px
		height 73px
		color #81807d
		transition color .3s ease-in
		will-change color
		&:hover
			color #d3c1ad

	&__pagination
		position absolute
		z-index 10
		top 90%
		display flex
		justify-content center
		align-items center
		width 100%

	&__dot
		margin-left 15px
		width 12px
		height 12px
		cursor pointer
		background-image url('/assets/images/circle.png')
		background-size contain

		&_active
			width 15px
			height 15px
			background-image url('/assets/images/active-circle.png')
