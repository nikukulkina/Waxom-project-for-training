.statistyx-item
	display flex
	flex-direction column
	flex-wrap wrap
	align-items center
	width 20%

	&::after 
		width 40px
		height 2px
		content ''
		background-color #ffffff

	&__img
		margin 30px auto
		width 54px
		height 54px
		color #c7b299
	&__count
		font-size 48px
		font-weight 200
		color $white
	&__text
		padding 20px 0 40px
		font-size 14px
		text-transform uppercase
		color #c7b299
