.statistyx-item
	display flex
	flex-direction column
	flex-wrap wrap
	align-items center
	width 20%

	&::after 
		width 40px
		height 2px
		content ''
		background-color #ffffff
		@media (max-width:461px)
			display none

	&__img
		margin 30px auto
		width 54px
		height 54px
		color #c7b299
	&__count
		font-size 48px
		font-weight 200
		color $white
	&__text
		padding 20px 0 40px
		font-size 14px
		text-align center
		text-transform uppercase
		color #c7b299
	@media (max-width:760px)
		&__text
			padding-bottom 20px
			font-size 12px
		&__count
			font-size 32px
		&__img
			margin-y 10px
	@media (max-width:665px)
		&__text
			padding-bottom 10px
			font-size 10px
		&__count
			font-size 30px
		&__img
			width 40px
			height 40px
	@media (max-width:574px)
		&__text
			padding-top 10px
			padding-bottom 5px
			text-transform none

		&__count
			font-size 20px
		&__img
			width 30px
			height 30px
	@media (max-width:574px)
		&__count
			font-size 16px
		&__img
			width 20px
			height 20px
