.video-player
	position relative

	&__window, .video-player__controls
		margin 0 auto
		// visibility hidden
		&_visible
			visibility visible
	&__window
		padding-top 25px
		display block

	&__contain
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)
		display flex
		justify-content center
		flex-direction column
		width 550px
	&__title
		color #ffffff

	&__play
		margin 0 auto
		padding 15px
		width 100px
		height 100px
		cursor pointer
		color #ffffff
		background-color transparent
		border-radius 50%
		transition background-color .3s ease-in
		&:hover
			background-color rgba(54, 47, 45, .5)
	.hidden
		display none

	&__controls
		display flex
		width 550px
		justify-content space-between
		align-items center

	&__play-btn-icon, .video-player__volume-btn-icon
		width 35px
		height 35px
		cursor pointer
		color #ffffff
	&__panel-item
		&_progress
			width 70%
	&__play-btn, .video-player__volume-btn
		margin 0 10px
	&__scroll-bar
		-webkit-appearance none
		width 100%
		height 10px
		border 1px solid #D4D4D4
		border-radius 2px
		outline none
	&__scroll-bar_progress
		border-color #ff00ff

