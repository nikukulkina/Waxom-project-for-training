.video-start-screen
	position absolute
	top 50%
	left 50%
	margin-right -50%
	transform translate(-50%, -50%)

	&__contain
		display flex
		flex-direction column
		align-items center
		&_hidden
			display none
	&__play
		margin 0 auto
		padding 15px
		width 100px
		height 100px
		cursor pointer
		color #ffffff
		background-color transparent
		border-radius 50%
		transition background-color .3s ease-in
		&:hover
			background-color rgba(54, 47, 45, .5)
		@media (max-width:700px)
			width 70px
			height 70px
	&__title
		display none
		font-family 'Raleway'
		font-size 20px
		font-weight 600
		color $white
		@media(max-width:500px)
			display block