.video-start-screen
	&__contain
		display flex
		flex-direction column
		align-items center
	&__play
		margin 0 auto
		padding 15px
		width 100px
		height 100px
		cursor pointer
		color #ffffff
		background-color transparent
		border-radius 50%
		transition background-color .3s ease-in
		&:hover
			background-color rgba(54, 47, 45, .5)